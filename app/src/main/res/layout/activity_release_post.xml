<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
<include layout="@layout/title_bar_layout"/>
 <android.support.v4.widget.NestedScrollView
     android:layout_width="@dimen/dp_0"
     android:layout_height="@dimen/dp_0"
     app:layout_constraintLeft_toLeftOf="parent"
     app:layout_constraintRight_toRightOf="parent"
     android:fillViewport="true"
     app:layout_constraintTop_toBottomOf="@+id/cl_bar"
     app:layout_constraintBottom_toBottomOf="parent">
     <android.support.constraint.ConstraintLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:focusable="true"
         android:focusableInTouchMode="true"
         >
         <EditText
             android:id="@+id/et_title"
             android:layout_width="@dimen/dp_0"
             android:layout_height="wrap_content"
             app:layout_constraintLeft_toLeftOf="parent"
             app:layout_constraintRight_toRightOf="parent"
             app:layout_constraintTop_toTopOf="parent"
             android:background="@color/transparent"
             android:padding="@dimen/dp_10"
             android:textColor="@color/black_ivory"
             android:textColorHint="@color/black_text"
             android:hint="标题（30字之内）"
             android:textSize="@dimen/sp_18"
             android:drawableLeft="@mipmap/star_icon"
             android:drawablePadding="@dimen/dp_5"
             />
         <android.support.v7.widget.RecyclerView
             android:layout_width="@dimen/dp_0"
             android:layout_height="@dimen/dp_0"
             app:layout_constraintLeft_toLeftOf="parent"
             app:layout_constraintRight_toRightOf="parent"
             app:layout_constraintTop_toBottomOf="@+id/et_title"
             app:layout_constraintBottom_toTopOf="@+id/iv_icon"
             android:layout_marginBottom="@dimen/dp_10"/>
         <ImageView
             android:id="@+id/iv_icon"
             android:layout_width="@dimen/dp_20"
             android:layout_height="@dimen/dp_20"
             app:layout_constraintLeft_toLeftOf="parent"
             app:layout_constraintBottom_toBottomOf="parent"
             android:src="@mipmap/head_ic"
             android:layout_marginLeft="@dimen/dp_15"
             android:layout_marginBottom="@dimen/dp_17"
             />
         <ImageView
             android:id="@+id/iv_pic"
             android:layout_width="@dimen/dp_20"
             android:layout_height="@dimen/dp_20"
             app:layout_constraintLeft_toRightOf="@+id/iv_icon"
             app:layout_constraintBottom_toBottomOf="parent"
             android:src="@mipmap/head_ic"
             android:layout_marginLeft="@dimen/dp_15"
             android:layout_marginBottom="@dimen/dp_17"
             />
         <ImageView
             android:id="@+id/iv_classify"
             android:layout_width="@dimen/dp_20"
             android:layout_height="@dimen/dp_20"
             app:layout_constraintLeft_toRightOf="@+id/iv_pic"
             app:layout_constraintBottom_toBottomOf="parent"
             android:src="@mipmap/head_ic"
             android:layout_marginLeft="@dimen/dp_15"
             android:layout_marginBottom="@dimen/dp_17"
             />
         <ImageView
             android:id="@+id/iv_address"
             android:layout_width="@dimen/dp_20"
             android:layout_height="@dimen/dp_20"
             app:layout_constraintLeft_toRightOf="@+id/iv_classify"
             app:layout_constraintBottom_toBottomOf="parent"
             android:src="@mipmap/head_ic"
             android:layout_marginLeft="@dimen/dp_15"
             android:layout_marginBottom="@dimen/dp_17"
             />


     </android.support.constraint.ConstraintLayout>

 </android.support.v4.widget.NestedScrollView>
</android.support.constraint.ConstraintLayout>
