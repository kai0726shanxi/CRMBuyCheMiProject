<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activityRootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
<include layout="@layout/title_bar_layout"/>
 <android.support.v4.widget.NestedScrollView
     android:id="@+id/scrollView"
     android:layout_width="@dimen/dp_0"
     android:layout_height="@dimen/dp_0"
     app:layout_constraintLeft_toLeftOf="parent"
     app:layout_constraintRight_toRightOf="parent"
     android:fillViewport="true"
     android:overScrollMode="never"
     app:layout_constraintTop_toBottomOf="@+id/cl_bar"
     app:layout_constraintBottom_toTopOf="@+id/cl_bottom"
     android:layout_marginBottom="@dimen/dp_10">
     <android.support.constraint.ConstraintLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:focusable="true"
         android:focusableInTouchMode="true"
         >
         <EditText
             android:id="@+id/et_title"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             app:layout_constraintLeft_toLeftOf="parent"
             app:layout_constraintTop_toTopOf="parent"
             android:background="@color/transparent"
             android:padding="@dimen/dp_10"
             android:textColor="@color/black_ivory"
             android:textColorHint="@color/black_text"
             android:hint="标题（30字之内）"
             android:maxLength="30"
             android:text=""
             android:textSize="@dimen/sp_18"
             android:drawableLeft="@mipmap/star_icon"
             android:drawablePadding="@dimen/dp_5"

             />
         <android.support.v7.widget.RecyclerView
             android:id="@+id/mRecyclePost"
             android:layout_width="@dimen/dp_0"
             android:layout_height="wrap_content"
             android:nestedScrollingEnabled="false"
             android:overScrollMode="never"
             app:layout_constraintLeft_toLeftOf="parent"
             app:layout_constraintRight_toRightOf="parent"
             app:layout_constraintTop_toBottomOf="@+id/et_title"
        />

         <View
             android:id="@+id/v_line"
             android:layout_width="wrap_content"
             android:layout_height="@dimen/dp_260"
             app:layout_constraintLeft_toLeftOf="parent"
             app:layout_constraintRight_toRightOf="parent"
             app:layout_constraintTop_toBottomOf="@+id/mRecyclePost"/>


     </android.support.constraint.ConstraintLayout>

 </android.support.v4.widget.NestedScrollView>
    <android.support.constraint.ConstraintLayout
        android:id="@+id/cl_bottom"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/iv_pic"
        android:layout_marginBottom="@dimen/dp_10">
        <TextView
            android:id="@+id/tv_lun_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:ellipsize="end"
            android:padding="@dimen/dp_3"
            android:textSize="@dimen/dp_8"
            android:drawableRight="@mipmap/cross_icon"
            android:drawablePadding="@dimen/dp_5"
            android:visibility="invisible"
            android:layout_marginLeft="@dimen/dp_20"
            android:textColor="@color/home_bottom_down"
            android:background="@drawable/bg_line_bule"
            app:layout_constraintLeft_toLeftOf="parent"
    />
        <TextView
            android:id="@+id/tv_address_content"
            android:layout_width="@dimen/dp_100"
            android:lines="1"
            android:ellipsize="end"
            android:padding="@dimen/dp_5"
            android:visibility="invisible"
            android:drawableRight="@mipmap/cross_icon"
            android:drawablePadding="@dimen/dp_5"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/tv_lun_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:textSize="@dimen/dp_8"
            android:textColor="@color/home_bottom_down"
            android:background="@drawable/bg_line_bule"
    />
    </android.support.constraint.ConstraintLayout>


    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_20"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@mipmap/tie_icon_ic"
        android:visibility="gone"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_17"
        />
    <ImageView
        android:id="@+id/iv_pic"
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_20"
        app:layout_constraintLeft_toRightOf="@+id/iv_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@mipmap/tie_pic_ic"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_17"
        />
    <ImageView
        android:id="@+id/iv_classify_new"
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_20"
        app:layout_constraintLeft_toRightOf="@+id/iv_pic"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@mipmap/tie_lun_ic"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_17"
        />
    <ImageView
        android:id="@+id/iv_address"
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_20"
        app:layout_constraintLeft_toRightOf="@+id/iv_classify"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@mipmap/tie_map_ic"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_17"
        />

</android.support.constraint.ConstraintLayout>
