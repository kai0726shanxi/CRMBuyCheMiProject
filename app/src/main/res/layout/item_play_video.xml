<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/thumb"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />


    </FrameLayout>

    <ImageView
        android:id="@+id/iv_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_35"
        android:src="@mipmap/title_left_icon"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_play"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_60"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@mipmap/ic_play_stop"/>
    <View
        android:id="@+id/view_bg"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_left"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/transparent"/>

    <ImageView
        android:id="@+id/iv_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_35"
        android:src="@mipmap/share_video_ic"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_80"
        android:layout_marginBottom="@dimen/dp_24"
        android:ellipsize="end"
        android:lines="2"
        android:text="这种植物蛋白可取代肉蛋白，即将席卷全球"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_16"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_10"
        android:text=""
        android:textColor="@color/white"
        android:textSize="@dimen/sp_16"
        app:layout_constraintBottom_toTopOf="@+id/tv_content"
        app:layout_constraintLeft_toLeftOf="@+id/tv_content"
        app:layout_constraintRight_toRightOf="@+id/tv_content" />

    <View
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_address"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/bg_video"/>
    <TextView
        android:id="@+id/tv_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_15"
        android:background="@drawable/bg_radius_black"
        android:drawableLeft="@mipmap/map_white_ic"
        android:drawablePadding="@dimen/dp_5"
        android:text="上海"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_12"
        app:layout_constraintBottom_toTopOf="@+id/tv_name"
        app:layout_constraintLeft_toLeftOf="@+id/tv_content" />

    <TextView
        android:id="@+id/tv_collect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp_28"
        android:drawableTop="@mipmap/collect_video_ic"
        android:drawablePadding="@dimen/dp_5"
        android:text="收藏"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_16"
        app:layout_constraintBottom_toTopOf="@+id/tv_address"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/tv_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp_28"
        android:layout_marginBottom="@dimen/dp_20"
        android:gravity="center"
        android:drawableTop="@mipmap/comment_video_ic"
        android:drawablePadding="@dimen/dp_5"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_16"
        app:layout_constraintBottom_toTopOf="@+id/tv_collect"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/tv_lick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp_28"
        android:layout_marginBottom="@dimen/dp_20"
        android:drawableTop="@mipmap/like_video_ic"
        android:drawablePadding="@dimen/dp_5"
        android:text="0"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_16"
        app:layout_constraintBottom_toTopOf="@+id/tv_comment"
        app:layout_constraintRight_toRightOf="parent" />

    <com.chmichat.chat.view.CircleImageView
        android:id="@+id/iv_head"
        android:layout_width="@dimen/dp_66"
        android:layout_height="@dimen/dp_66"
        android:src="@mipmap/head_ic"
        app:type="circle"
       app:layout_constraintBottom_toTopOf="@+id/tv_lick"
        app:layout_constraintLeft_toLeftOf="@+id/tv_lick"
        app:layout_constraintRight_toRightOf="@+id/tv_lick"
        android:layout_marginBottom="@dimen/dp_20"
        />

</android.support.constraint.ConstraintLayout>




