<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_10"
    android:layout_marginTop="@dimen/dp_15"
    android:layout_marginRight="@dimen/dp_10"
    android:padding="@dimen/dp_10">

    <com.chmichat.chat.view.CircleImageView
        android:id="@+id/iv_head"
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        android:src="@mipmap/head_icon" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_5"
        android:text="阁楼上的猫"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_14"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/iv_head"
        app:layout_constraintLeft_toRightOf="@+id/iv_head"
        app:layout_constraintTop_toTopOf="@+id/iv_head" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:lines="1"
        android:text="2019-09-09"
        android:textColor="@color/textcolor"
        android:textSize="@dimen/sp_12"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_name"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintWidth_percent="0.2" />

    <TextView
        android:id="@+id/tv_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_radius_theme_bg"
        android:text="预告"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_12"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_title"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_8"
        android:ellipsize="end"
        android:lines="1"
        android:text="消费者最喜欢喝的是什么？"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_16"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/tv_tag"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_head" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/cl_content_img"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title">

        <ImageView
            android:id="@+id/iv_content"
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_146"
            android:layout_marginTop="@dimen/dp_10"
            android:scaleType="centerCrop"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <android.support.constraint.ConstraintLayout
            android:id="@+id/cl_show_img"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_5"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

            <ImageView
                android:id="@+id/iv_one"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_120"
                android:layout_marginRight="@dimen/dp_5"
                android:scaleType="centerCrop"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/iv_two" />

            <ImageView
                android:id="@+id/iv_two"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_120"
                android:layout_marginRight="@dimen/dp_5"
                android:scaleType="centerCrop"
                app:layout_constraintHorizontal_weight="1"

                app:layout_constraintLeft_toRightOf="@+id/iv_one"
                app:layout_constraintRight_toLeftOf="@+id/iv_three" />

            <ImageView
                android:id="@+id/iv_three"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_120"
                android:layout_marginRight="@dimen/dp_5"
                android:scaleType="centerCrop"
                app:layout_constraintHorizontal_weight="1"

                app:layout_constraintLeft_toRightOf="@+id/iv_two"
                app:layout_constraintRight_toRightOf="parent" />

        </android.support.constraint.ConstraintLayout>
    </android.support.constraint.ConstraintLayout>


    <TextView
        android:id="@+id/tv_type"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:lines="1"
        android:text=""
        android:textColor="@color/current_time_text"
        android:textSize="@dimen/sp_12"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_share"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/tv_discuss" />

    <TextView
        android:id="@+id/tv_share"
        android:layout_width="@dimen/dp_60"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_18"
        android:drawableLeft="@mipmap/home_share_ic"
        android:drawablePadding="@dimen/dp_5"
        android:ellipsize="end"
        android:lines="1"
        android:text="20"
        android:textColor="@color/current_time_text"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cl_content_img" />

    <TextView
        android:id="@+id/tv_cai"
        android:layout_width="@dimen/dp_60"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/home_cai_ic"
        android:drawablePadding="@dimen/dp_5"
        android:ellipsize="end"
        android:lines="1"
        android:paddingRight="@dimen/dp_5"
        android:text="12"
        android:textColor="@color/current_time_text"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_share"
        app:layout_constraintRight_toLeftOf="@+id/tv_share" />

    <TextView
        android:id="@+id/tv_zan"
        android:layout_width="@dimen/dp_60"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/home_zan_ic"
        android:drawablePadding="@dimen/dp_5"
        android:ellipsize="end"
        android:lines="1"
        android:paddingRight="@dimen/dp_5"
        android:text="8888"
        android:textColor="@color/current_time_text"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_share"
        app:layout_constraintRight_toLeftOf="@+id/tv_cai" />

    <TextView
        android:id="@+id/tv_discuss"
        android:layout_width="@dimen/dp_60"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/home_lun_ic"
        android:drawablePadding="@dimen/dp_5"
        android:ellipsize="end"
        android:lines="1"
        android:paddingRight="@dimen/dp_5"
        android:text="66"
        android:textColor="@color/current_time_text"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_share"
        app:layout_constraintRight_toLeftOf="@+id/tv_zan" />

    <View
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_0_5"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@color/home_bg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_share" />
</android.support.constraint.ConstraintLayout>
