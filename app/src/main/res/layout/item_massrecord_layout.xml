<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <TextView
        android:id="@+id/tv_name"
        android:layout_width="@dimen/dp_60"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_20"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_14"
        android:lines="1"
        android:ellipsize="end"
        android:text="张三"/>
    <TextView
        android:id="@+id/tv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/tv_name"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_name"
        android:layout_marginLeft="@dimen/dp_15"
        android:textColor="@color/black_text"
        android:textSize="@dimen/sp_12"
        android:text="已完成"
        android:drawableLeft="@drawable/bg_cycle_bule"
        android:drawablePadding="@dimen/dp_5"
        android:background="@drawable/bg_radius_small_gray"/>

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_name"
        android:textSize="@dimen/sp_12"
        android:textColor="@color/black_text"
        android:layout_marginRight="@dimen/dp_15"
        android:text="2019-09-19"/>
    <TextView
        android:id="@+id/tv_bottom_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/tv_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_name"
        android:layout_marginTop="@dimen/sp_18"
        android:text="2019-09-19 信息群发"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/black"/>
    <ImageView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/next_ic"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="@dimen/dp_15"/>
    <View
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_bottom_time"
        android:layout_marginTop="@dimen/dp_15"
        android:background="@color/home_bg"/>
</android.support.constraint.ConstraintLayout>