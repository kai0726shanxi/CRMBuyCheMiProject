<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/home_bg"
    android:paddingTop="@dimen/dp_15"
    >
 <TextView
     android:id="@+id/tv_time"
     android:layout_width="@dimen/dp_60"
     android:layout_height="wrap_content"
     app:layout_constraintLeft_toLeftOf="parent"
     app:layout_constraintTop_toTopOf="parent"
     android:text="12:00"
     android:padding="@dimen/dp_5"
     android:gravity="center"
     android:layout_marginLeft="@dimen/dp_20"
     android:textColor="@color/black"
     android:textSize="@dimen/sp_14"
     android:textStyle="bold"
     />
    <ImageView
        android:id="@+id/iv_point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/time_point"
        app:layout_constraintLeft_toRightOf="@+id/tv_time"
        app:layout_constraintTop_toTopOf="@+id/tv_time"
        android:layout_marginTop="@dimen/dp_5"/>
    <ImageView
        android:id="@+id/iv_line"
        android:layout_width="@dimen/dp_5"
        android:layout_height="@dimen/dp_100"
        app:layout_constraintLeft_toRightOf="@+id/iv_point"
        android:layout_marginLeft="@dimen/dp_20"
        android:background="@color/home_bottom_down"/>
    <View
        android:id="@+id/viewbg"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_0"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="@+id/iv_line"
        app:layout_constraintBottom_toBottomOf="@+id/iv_line"
        app:layout_constraintLeft_toRightOf="@+id/iv_line"
        app:layout_constraintRight_toRightOf="parent"
        />
    <TextView
        android:id="@+id/tv_content"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_14"
        android:text=""
        app:layout_constraintLeft_toLeftOf="@id/viewbg"
        app:layout_constraintTop_toTopOf="@id/viewbg"
        app:layout_constraintRight_toRightOf="@+id/viewbg"
        android:maxLines="2"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_15"/>
    <TextView
        android:id="@+id/tv_content_time"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/tv_content"
        app:layout_constraintRight_toRightOf="@id/viewbg"
        app:layout_constraintTop_toBottomOf="@+id/tv_content"
        android:layout_marginTop="@dimen/dp_10"
        android:lines="1"
        android:ellipsize="end"
        android:text=""
        android:textSize="@dimen/sp_14"
        android:textColor="@color/black_text"/>


</android.support.constraint.ConstraintLayout>