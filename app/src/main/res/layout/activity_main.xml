<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.activity.MainActivity">


    <FrameLayout
        android:id="@+id/fl_container"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_0"
        app:layout_constraintBottom_toTopOf="@+id/tab_layout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <com.chaychan.library.BottomBarLayout

        android:id="@+id/tab_layout"

        android:layout_width="@dimen/dp_0"

        android:layout_height="@dimen/dp_52"

        android:layout_gravity="center"

        android:background="@color/white"

        android:gravity="center"

        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        >

        <com.chaychan.library.BottomBarItem

            android:layout_width="0dp"

            android:layout_height="match_parent"

            android:layout_weight="1"

            app:iconNormal="@mipmap/icon_home_normal"

            app:iconSelected="@mipmap/icon_home_down"

            app:itemMarginTop="@dimen/dp_5"

            app:itemText="首页"

            app:itemTextSize="@dimen/sp_10"

            app:openTouchBg="true"

            app:textColorNormal="@color/btm_navigation_bar_home_unselected_color"

            app:textColorSelected="@color/home_bottom_down"

            app:touchDrawable="@color/transparent"

            />

        <com.chaychan.library.BottomBarItem

            android:layout_width="0dp"

            android:layout_height="match_parent"

            android:layout_weight="1"

            app:iconNormal="@mipmap/icon_news_normal"

            app:iconSelected="@mipmap/icon_news_down"

            app:itemMarginTop="@dimen/dp_5"

            app:itemText="发现"

            app:itemTextSize="@dimen/sp_10"

            app:openTouchBg="true"

            app:textColorNormal="@color/btm_navigation_bar_home_unselected_color"

            app:textColorSelected="@color/home_bottom_down"

            app:touchDrawable="@color/transparent"

            />

        <com.chaychan.library.BottomBarItem

            android:id="@+id/btn_add"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            app:iconHeight="@dimen/dp_50"
            app:iconNormal="@mipmap/home_add_ic"
            app:iconSelected="@mipmap/home_add_ic"
            app:iconWidth="@dimen/dp_50"
            app:touchDrawable="@color/transparent"
            app:itemTextSize="0.5sp"
            />

        <com.chaychan.library.BottomBarItem

            android:layout_width="0dp"

            android:layout_height="match_parent"

            android:layout_weight="1"

            app:iconNormal="@mipmap/icon_order_normal"

            app:iconSelected="@mipmap/icon_order_down"

            app:itemMarginTop="@dimen/dp_5"

            app:itemText="通知"
            app:itemTextSize="@dimen/sp_10"
            app:openTouchBg="true"
            app:textColorNormal="@color/btm_navigation_bar_home_unselected_color"

            app:textColorSelected="@color/home_bottom_down"

            app:touchDrawable="@color/transparent"

            />


        <com.chaychan.library.BottomBarItem

            android:layout_width="0dp"

            android:layout_height="match_parent"

            android:layout_weight="1"

            app:iconNormal="@mipmap/icon_me_normal"

            app:iconSelected="@mipmap/icon_me_down"

            app:itemMarginTop="@dimen/dp_5"

            app:itemText="我的"

            app:itemTextSize="@dimen/sp_10"

            app:openTouchBg="true"

            app:textColorNormal="@color/btm_navigation_bar_home_unselected_color"

            app:textColorSelected="@color/home_bottom_down"

            app:touchDrawable="@color/transparent"

            />


    </com.chaychan.library.BottomBarLayout>


</android.support.constraint.ConstraintLayout>