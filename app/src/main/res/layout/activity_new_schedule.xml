<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".ui.activity.NewScheduleActivtity">

    <include layout="@layout/title_bar_layout" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_0"
        android:background="@color/home_bg"
        android:overScrollMode="never"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cl_bar">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv1"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:background="@color/white"
                android:paddingLeft="@dimen/dp_10"
                android:paddingTop="@dimen/dp_15"
                android:paddingRight="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_15"
                android:text="日程标题"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_14"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/et_title"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_80"
                android:background="@color/transparent"
                android:ellipsize="end"
                android:hint="请输入日程标题"
                android:maxLines="1"
                android:padding="@dimen/dp_15"
                android:textColor="@color/black"
                android:textColorHint="@color/black_text"
                android:textSize="@dimen/sp_14"
                app:layout_constraintBaseline_toBaselineOf="@+id/tv1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent" />

            <TextView
                android:id="@+id/tv2"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:background="@color/white"
                android:paddingLeft="@dimen/dp_10"
                android:paddingTop="@dimen/dp_15"
                android:paddingRight="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_15"
                android:text="开始"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_14"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv1" />

            <TextView
                android:id="@+id/tv_start"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:drawableRight="@mipmap/next_ic"
                android:drawablePadding="@dimen/dp_15"
                android:gravity="right"
                android:hint="请选择"
                android:padding="@dimen/dp_15"
                android:textColor="@color/black"
                android:textColorHint="@color/black_text"
                android:textSize="@dimen/sp_14"
                app:layout_constraintBaseline_toBaselineOf="@+id/tv2"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"

                />

            <TextView
                android:id="@+id/tv3"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_1"
                android:background="@color/white"
                android:paddingLeft="@dimen/dp_10"
                android:paddingTop="@dimen/dp_15"
                android:paddingRight="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_15"
                android:text="结束"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_14"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv2" />

            <TextView
                android:id="@+id/tv_end"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:drawableRight="@mipmap/next_ic"
                android:drawablePadding="@dimen/dp_15"
                android:gravity="right"
                android:hint="请选择"
                android:padding="@dimen/dp_15"
                android:textColor="@color/black"
                android:textColorHint="@color/black_text"
                android:textSize="@dimen/sp_14"
                app:layout_constraintBaseline_toBaselineOf="@+id/tv3"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent" />

            <TextView
                android:id="@+id/tv4"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_1"
                android:background="@color/white"
                android:paddingLeft="@dimen/dp_10"
                android:paddingTop="@dimen/dp_15"
                android:paddingRight="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_15"
                android:text="提醒"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_14"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv3" />

            <TextView
                android:id="@+id/tv_remind"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:drawableRight="@mipmap/next_ic"
                android:drawablePadding="@dimen/dp_15"
                android:gravity="right"
                android:padding="@dimen/dp_15"
                android:text="不提醒"
                android:textColor="@color/black"
                android:textColorHint="@color/black_text"
                android:textSize="@dimen/sp_14"
                app:layout_constraintBaseline_toBaselineOf="@+id/tv4"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent" />

            <TextView
                android:id="@+id/tv5"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:background="@color/white"
                android:paddingLeft="@dimen/dp_10"
                android:paddingTop="@dimen/dp_15"
                android:paddingRight="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_15"
                android:text="标记"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_14"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv4" />

            <RadioGroup
                android:id="@+id/radio_grop"
                android:layout_width="@dimen/dp_0"
                android:layout_height="@dimen/dp_0"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="@+id/tv5"
                app:layout_constraintRight_toRightOf="@+id/tv5"
                app:layout_constraintTop_toTopOf="@+id/tv5"
                app:layout_constraintWidth_percent="0.8">

                <RadioButton
                    android:layout_width="@dimen/dp_25"
                    android:layout_height="@dimen/dp_25"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:background="@android:color/holo_red_light"
                    android:button="@drawable/btn_colcor_selector" />

                <RadioButton
                    android:layout_width="@dimen/dp_25"
                    android:layout_height="@dimen/dp_25"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:background="@android:color/holo_orange_dark"
                    android:button="@drawable/btn_colcor_selector" />

                <RadioButton
                    android:layout_width="@dimen/dp_25"
                    android:layout_height="@dimen/dp_25"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:background="@android:color/holo_blue_light"
                    android:button="@drawable/btn_colcor_selector" />

                <RadioButton
                    android:layout_width="@dimen/dp_25"
                    android:layout_height="@dimen/dp_25"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:background="#FFCC00"
                    android:button="@drawable/btn_colcor_selector" />

                <RadioButton
                    android:layout_width="@dimen/dp_25"
                    android:layout_height="@dimen/dp_25"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:background="#33CCCC"
                    android:button="@drawable/btn_colcor_selector"
                    android:gravity="center" />

                <RadioButton
                    android:layout_width="@dimen/dp_25"
                    android:layout_height="@dimen/dp_25"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:background="#9933FF"
                    android:button="@drawable/btn_colcor_selector" />

                <RadioButton
                    android:layout_width="@dimen/dp_25"
                    android:layout_height="@dimen/dp_25"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:background="@color/black"
                    android:button="@drawable/btn_colcor_selector" />


            </RadioGroup>

            <TextView
                android:id="@+id/tv6"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:background="@color/white"
                android:paddingLeft="@dimen/dp_10"
                android:paddingTop="@dimen/dp_15"
                android:paddingRight="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_15"
                android:text="关联客户"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_14"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv5" />


            <TextView
                android:id="@+id/tv_customer"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:drawableRight="@mipmap/next_ic"
                android:drawablePadding="@dimen/dp_15"
                android:gravity="right"
                android:hint="请选择"
                android:padding="@dimen/dp_15"
                android:textColor="@color/black"
                android:textColorHint="@color/black_text"
                android:textSize="@dimen/sp_14"
                app:layout_constraintBaseline_toBaselineOf="@+id/tv6"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent" />

            <EditText
                android:id="@+id/edit_content"
                android:layout_width="@dimen/dp_0"
                android:layout_height="@dimen/dp_200"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_35"
                android:layout_marginRight="@dimen/dp_10"
                android:background="@drawable/bg_radius_white"
                android:gravity="left|top"
                android:hint="请输入描述"
                android:paddingLeft="@dimen/dp_10"
                android:paddingTop="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_35"
                android:textColor="@color/black"
                android:textColorHint="@color/black_text"
                android:textSize="@dimen/sp_14"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv6" />

            <TextView
                android:id="@+id/tvshownum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_10"
                android:text="已输入 0/300"
                android:textColor="@color/black_text"
                android:textSize="@dimen/sp_10"
                app:layout_constraintBottom_toBottomOf="@id/edit_content"
                app:layout_constraintRight_toRightOf="@id/edit_content" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycle_img"
                android:layout_width="@dimen/dp_0"
                android:layout_height="@dimen/dp_200"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edit_content" />
        </android.support.constraint.ConstraintLayout>
    </android.support.v4.widget.NestedScrollView>


</android.support.constraint.ConstraintLayout>
