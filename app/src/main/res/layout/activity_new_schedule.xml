<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/home_bg"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:fitsSystemWindows="true"
    tools:context=".ui.activity.NewScheduleActivtity">

    <include layout="@layout/title_bar_layout" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_0"
        android:overScrollMode="never"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cl_bar"
        app:layout_constraintBottom_toBottomOf="parent">
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv1"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:background="@color/white"
                android:paddingLeft="@dimen/dp_10"
                android:paddingTop="@dimen/dp_15"
                android:paddingRight="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_15"
                android:text="日程标题"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_14"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <EditText
                android:id="@+id/et_title"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_80"
                android:background="@color/transparent"
                android:hint="请输入日程标题"
                android:padding="@dimen/dp_15"
                android:textColor="@color/black"
                android:textColorHint="@color/black_text"
                android:textSize="@dimen/sp_14"
                android:maxLines="1"
                android:ellipsize="end"
                app:layout_constraintBaseline_toBaselineOf="@+id/tv1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent" />

            <TextView
                android:id="@+id/tv2"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:background="@color/white"
                android:paddingLeft="@dimen/dp_10"
                android:paddingTop="@dimen/dp_15"
                android:paddingRight="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_15"
                android:text="开始"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_14"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv1" />

            <TextView
                android:id="@+id/tv_start"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:drawableRight="@mipmap/next_ic"
                android:drawablePadding="@dimen/dp_15"
                android:gravity="right"
                android:hint="请选择"
                android:padding="@dimen/dp_15"
                android:textColor="@color/black"
                android:textColorHint="@color/black_text"
                android:textSize="@dimen/sp_14"
                app:layout_constraintBaseline_toBaselineOf="@+id/tv2"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"

                />

            <TextView
                android:id="@+id/tv3"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_1"
                android:background="@color/white"
                android:paddingLeft="@dimen/dp_10"
                android:paddingTop="@dimen/dp_15"
                android:paddingRight="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_15"
                android:text="结束"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_14"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv2" />

            <TextView
                android:id="@+id/tv_end"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:drawableRight="@mipmap/next_ic"
                android:drawablePadding="@dimen/dp_15"
                android:gravity="right"
                android:hint="请选择"
                android:padding="@dimen/dp_15"
                android:textColor="@color/black"
                android:textColorHint="@color/black_text"
                android:textSize="@dimen/sp_14"
                app:layout_constraintBaseline_toBaselineOf="@+id/tv3"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent" />

            <TextView
                android:id="@+id/tv4"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_1"
                android:background="@color/white"
                android:paddingLeft="@dimen/dp_10"
                android:paddingTop="@dimen/dp_15"
                android:paddingRight="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_15"
                android:text="提醒"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_14"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv3" />

            <TextView
                android:id="@+id/tv_remind"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:drawableRight="@mipmap/next_ic"
                android:drawablePadding="@dimen/dp_15"
                android:gravity="right"
                android:text="不提醒"
                android:padding="@dimen/dp_15"
                android:textColor="@color/black"
                android:textColorHint="@color/black_text"
                android:textSize="@dimen/sp_14"
                app:layout_constraintBaseline_toBaselineOf="@+id/tv4"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent" />

            <TextView
                android:id="@+id/tv5"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:background="@color/white"
                android:paddingLeft="@dimen/dp_10"
                android:paddingTop="@dimen/dp_15"
                android:paddingRight="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_15"
                android:text="标记"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_14"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv4" />


            <TextView
                android:id="@+id/tv6"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:background="@color/white"
                android:paddingLeft="@dimen/dp_10"
                android:paddingTop="@dimen/dp_15"
                android:paddingRight="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_15"
                android:text="关联客户"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_14"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv5" />


            <TextView
                android:id="@+id/tv_customer"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:drawableRight="@mipmap/next_ic"
                android:drawablePadding="@dimen/dp_15"
                android:gravity="right"
                android:hint="请选择"
                android:padding="@dimen/dp_15"
                android:textColor="@color/black"
                android:textColorHint="@color/black_text"
                android:textSize="@dimen/sp_14"
                app:layout_constraintBaseline_toBaselineOf="@+id/tv6"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                />
            <EditText
                android:id="@+id/edit_content"
                android:layout_width="@dimen/dp_0"
                android:layout_height="@dimen/dp_200"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:paddingTop="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_35"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv6"
                android:layout_marginTop="@dimen/dp_35"
                android:background="@drawable/bg_radius_white"
                android:gravity="left|top"
                android:textColor="@color/black"
                android:textColorHint="@color/black_text"
                android:textSize="@dimen/sp_14"
                android:hint="请输入描述"/>
            <TextView
                android:id="@+id/tvshownum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_10"
                android:textColor="@color/black_text"
                app:layout_constraintRight_toRightOf="@id/edit_content"
                app:layout_constraintBottom_toBottomOf="@id/edit_content"
                android:padding="@dimen/dp_10"
                android:text="已输入 0/300"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycle_img"
                android:layout_width="@dimen/dp_0"
                android:layout_height="@dimen/dp_200"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edit_content"/>
        </android.support.constraint.ConstraintLayout>
    </android.support.v4.widget.NestedScrollView>



</android.support.constraint.ConstraintLayout>
