<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_15"
    android:background="@color/white">
<com.chmichat.chat.view.CircleImageView
    android:id="@+id/iv_head"
    android:layout_width="@dimen/dp_36"
    android:layout_height="@dimen/dp_36"
    app:type="circle"
    android:src="@mipmap/head_ic"/>
    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black_text"
        android:textSize="@dimen/sp_12"
        app:layout_constraintLeft_toRightOf="@+id/iv_head"
        android:layout_marginLeft="@dimen/dp_10"
        android:text="小猫"/>
    <TextView
        android:id="@+id/tv_content"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/black_ivory"
        android:text="心底的芬芳 向烈日生长"
        app:layout_constraintRight_toRightOf="parent"
        android:drawableRight="@mipmap/longvideo_comment_ic"
        app:layout_constraintLeft_toLeftOf="@+id/tv_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_name"
        android:layout_marginTop="@dimen/dp_5"/>
    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_12"
        android:textColor="@color/black_text"
        android:text=""
        app:layout_constraintLeft_toLeftOf="@+id/tv_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_content"
        android:layout_marginTop="@dimen/dp_5"/>


</android.support.constraint.ConstraintLayout>
