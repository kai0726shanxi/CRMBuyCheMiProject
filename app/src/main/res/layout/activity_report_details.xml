<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/home_bg"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".ui.activity.NewMemoActivity">

    <include layout="@layout/title_bar_layout" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cl_bar"
        android:textSize="@dimen/sp_18"
        android:textColor="@color/displayt"
        android:padding="@dimen/dp_35"
        android:text="该报告于2019-08-02 12:00:00 提交"
        />
    <TextView
        android:id="@+id/tv_type"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_time"
        android:padding="@dimen/dp_10"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_14"
        android:text="日志"/>
    <TextView
        android:id="@+id/tv_user"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_type"
        android:layout_marginTop="@dimen/dp_1"
        android:padding="@dimen/dp_15"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/black"
        android:background="@color/white"
        android:text="提交员工"/>
    <android.support.constraint.ConstraintLayout
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_0"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_user"
        app:layout_constraintBottom_toBottomOf="@+id/tv_user"
        app:layout_constraintWidth_percent="0.7"

        >
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_14"
            android:text="张三"
            android:lines="1"
            android:ellipsize="end"
            android:padding="@dimen/dp_15"

            />
        <TextView
            android:id="@+id/tv_positon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/tv_name"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/black_text"
            android:text="总经理"
            android:lines="1"
            android:ellipsize="end"
            android:padding="@dimen/dp_15"/>
        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/tv_positon"
            android:textColor="@color/black_text"
            android:textSize="@dimen/sp_14"
            android:padding="@dimen/dp_15"
            android:lines="1"
            android:ellipsize="end"
            android:text="188888888888"/>
    </android.support.constraint.ConstraintLayout>

    <EditText
        android:id="@+id/et_content"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_180"
        android:layout_marginTop="@dimen/dp_15"
        android:background="@color/white"
        android:gravity="top"
        android:hint="请输入内容"
        android:padding="@dimen/dp_10"
        android:textColor="@color/black"
        android:textColorHint="@color/black_text"
        android:textSize="@dimen/sp_14"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_user" />

    <TextView
        android:id="@+id/tv_show_num"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="right"
        android:padding="@dimen/dp_10"
        android:text="已输入0/300"
        android:textColor="@color/black_text"
        android:textSize="@dimen/sp_12"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_content" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycle_img"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_100"
        android:layout_marginTop="@dimen/dp_20"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_show_num"
        />




</android.support.constraint.ConstraintLayout>
