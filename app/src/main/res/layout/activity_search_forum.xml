<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".ui.activity.home.SearchForumActivity">


    <include layout="@layout/title_bar_layout" />
<TextView
    android:id="@+id/tv1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/cl_bar"
    android:layout_marginLeft="@dimen/dp_15"
    android:layout_marginTop="@dimen/dp_23"
    android:textStyle="bold"
    android:textSize="@dimen/sp_12"
    android:textColor="@color/black_ivory"
    android:text="历史纪录"/>

<ImageView
    android:id="@+id/iv_delete"
    android:layout_width="@dimen/dp_22"
    android:layout_height="@dimen/dp_24"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="@+id/tv1"
    android:layout_marginRight="@dimen/dp_15"
    android:src="@mipmap/delete_search_ic"
    android:padding="@dimen/dp_5"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycle_history"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_200"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv1"
        android:layout_marginTop="@dimen/dp_5"/>
    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recycle_history"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_23"
        android:textStyle="bold"
        android:textSize="@dimen/sp_12"
        android:textColor="@color/black_ivory"
        android:text="热门推荐"
        />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycle_hot"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv2"
        android:layout_marginTop="@dimen/dp_5"/>

</android.support.constraint.ConstraintLayout>