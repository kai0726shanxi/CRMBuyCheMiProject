<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_15"
    android:layout_marginTop="@dimen/dp_15"
    android:layout_marginRight="@dimen/dp_15">
    <TextView
        android:id="@+id/tv_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="发帖子"
        android:textColor="@color/medynamic"
        android:textSize="@dimen/sp_12"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2019-09-09"
        android:textColor="@color/medynamic"
        android:textSize="@dimen/sp_12"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_1"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:ellipsize="end"
        android:lines="1"
        android:text="无糖糖果面世！热量、糖分、脂肪全部为零…"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_14"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_1" />

    <com.chmichat.chat.view.PartColorTextView
        android:id="@+id/tv_source"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_12"
        android:text="来自  原料论坛"
        android:textSize="@dimen/sp_12"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title" />

    <TextView
        android:id="@+id/tv_comment"
        android:layout_width="@dimen/dp_60"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_15"
        android:drawableLeft="@mipmap/test_zan"
        android:drawablePadding="@dimen/dp_5"
        android:ellipsize="end"
        android:lines="1"
        android:text="20"
        android:textColor="@color/current_time_text"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_source"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/tv_zan"
        android:layout_width="@dimen/dp_60"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/test_zan"
        android:drawablePadding="@dimen/dp_5"
        android:ellipsize="end"
        android:lines="1"
        android:paddingRight="@dimen/dp_5"
        android:text="12"
        android:textColor="@color/current_time_text"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_comment"
        app:layout_constraintRight_toLeftOf="@+id/tv_comment" />

    <View
        android:layout_width="@dimen/dp_0"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/dp_15"
        android:background="@color/home_bg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_source" />
</android.support.constraint.ConstraintLayout>
