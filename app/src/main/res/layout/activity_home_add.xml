<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <ImageView
        android:id="@+id/iv_delete"
        android:layout_width="@dimen/dp_45"
        android:layout_height="@dimen/dp_45"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/dp_25"
        android:src="@mipmap/home_delete_ic"
        android:padding="@dimen/dp_15"/>

    <TextView
        android:id="@+id/tv_add_longvideo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/iv_delete"
        android:drawableTop="@mipmap/add_longvideo_ic"
        android:layout_marginLeft="@dimen/dp_30"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/black_ivory"
        android:text="VLOG"
        android:layout_marginBottom="@dimen/dp_15"
        android:gravity="center"
        android:drawablePadding="@dimen/dp_5"/>
    <TextView
        android:id="@+id/tv_add_imgtxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/tv_add_longvideo"
        app:layout_constraintBottom_toTopOf="@+id/tv_add_longvideo"
        android:layout_marginBottom="@dimen/dp_35"
        android:drawableTop="@mipmap/add_imagetext_ic"
        android:text="图文"
        android:textColor="@color/black_ivory"
        android:textSize="@dimen/sp_14"
        android:gravity="center"
        android:drawablePadding="@dimen/dp_5"/>
    <TextView
        android:id="@+id/tv_add_tie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
      app:layout_constraintBaseline_toBaselineOf="@+id/tv_add_imgtxt"
        app:layout_constraintLeft_toRightOf="@+id/tv_add_imgtxt"
        app:layout_constraintRight_toLeftOf="@+id/tv_add_video"
        android:layout_marginBottom="@dimen/dp_35"
        android:drawableTop="@mipmap/add_tie_ic"
        android:text="帖子"
        android:textColor="@color/black_ivory"
        android:textSize="@dimen/sp_14"
        android:gravity="center"
        android:drawablePadding="@dimen/dp_5"/>
    <TextView
        android:id="@+id/tv_add_video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_add_imgtxt"
        android:layout_marginBottom="@dimen/dp_35"
        android:drawableTop="@mipmap/add_video_ic"
        android:layout_marginRight="@dimen/dp_30"
        android:text="小视频"
        android:textColor="@color/black_ivory"
        android:textSize="@dimen/sp_14"
        android:gravity="center"
        android:drawablePadding="@dimen/dp_5"/>
</android.support.constraint.ConstraintLayout>
