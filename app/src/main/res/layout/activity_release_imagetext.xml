<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".ui.activity.add.ReleaseImageTextActivity">

    <include layout="@layout/title_bar_layout" />

  <View
      android:id="@+id/v_line1"
      android:layout_width="@dimen/dp_0"
      android:layout_height="@dimen/dp_1"
      android:background="@color/home_bg"
      app:layout_constraintTop_toBottomOf="@+id/cl_bar"
      />

    <ImageView
        android:id="@+id/show_img"
        android:layout_width="@dimen/dp_121"
        android:layout_height="@dimen/dp_106"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/v_line1"
        android:src="@mipmap/test_video"
        android:scaleType="centerCrop"
        android:layout_margin="@dimen/dp_15"/>
    <EditText
        android:id="@+id/tv_name"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:ellipsize="end"
        android:maxEms="12"
        android:hint="请输入标题"
        android:padding="@dimen/dp_5"
        android:layout_marginLeft="@dimen/dp_10"
        android:textSize="@dimen/sp_14"
        android:textColorHint="@color/black_text"
        android:textColor="@color/black_ivory"
        android:background="@color/transparent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/show_img"
        app:layout_constraintRight_toLeftOf="@+id/show_img"/>
    <EditText
        android:id="@+id/edit_content"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_name"
        app:layout_constraintRight_toLeftOf="@+id/show_img"
        android:background="@color/transparent"
        android:textColor="@color/black_ivory"
        android:textColorHint="@color/black_text"
        android:textSize="@dimen/sp_14"
        android:padding="@dimen/dp_5"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_20"
        android:hint="添加合适的论坛分类,能获得更多赞"/>
        <TextView
            android:id="@+id/show_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@+id/show_img"
            app:layout_constraintRight_toRightOf="@+id/show_img"
            app:layout_constraintTop_toBottomOf="@+id/show_img"
            android:layout_marginTop="@dimen/dp_20"
            android:textSize="@dimen/sp_10"
            android:textColor="@color/black_text"
            android:text="0/200"/>
    <View
        android:id="@+id/v_line2"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_10"
        android:background="@color/home_bg"
        app:layout_constraintTop_toBottomOf="@+id/show_num"
        android:layout_marginTop="@dimen/dp_100"/>

    <TextView
        android:id="@+id/tv_lun"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/dp_5"
        android:padding="@dimen/dp_15"
        app:layout_constraintTop_toBottomOf="@+id/v_line2"
        android:textColor="@color/black_ivory"
        android:text="论坛"
        android:textSize="@dimen/sp_14"
        android:drawableLeft="@mipmap/add_lun_ic"
        android:drawablePadding="@dimen/dp_8"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/tv_lun_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="@+id/tv_lun"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_lun"
        android:hint="选择论坛"
        android:drawableRight="@mipmap/next_ic"
        android:drawablePadding="@dimen/dp_5"
        android:layout_marginRight="@dimen/dp_15"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/black_ivory"
        android:textColorHint="@color/black_text"/>
    <TextView
        android:id="@+id/tv_address"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:padding="@dimen/dp_15"
        app:layout_constraintTop_toBottomOf="@+id/tv_lun"
        android:textColor="@color/black_ivory"
        android:text="所在位置"
        android:textSize="@dimen/sp_14"
        android:drawableLeft="@mipmap/add_map_ic"
        android:drawablePadding="@dimen/dp_8"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/tv_address_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="@+id/tv_lun"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_address"
        android:hint="选择地址"
        android:drawableRight="@mipmap/next_ic"
        android:drawablePadding="@dimen/dp_5"
        android:layout_marginRight="@dimen/dp_15"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/black_ivory"
        android:textColorHint="@color/black_text"/>
</android.support.constraint.ConstraintLayout>

