<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dp_15"
    android:background="@color/white">

   <ImageView
       android:id="@+id/iv_bg"
       android:layout_width="@dimen/dp_0"
       android:layout_height="@dimen/dp_160"
       app:layout_constraintLeft_toLeftOf="parent"
       app:layout_constraintRight_toRightOf="parent"
       app:layout_constraintTop_toTopOf="parent"
       android:scaleType="centerCrop"
       android:src="@mipmap/test_pig"
       />
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:textColor="@color/black_ivory"
        app:layout_constraintTop_toBottomOf="@+id/iv_bg"
        android:layout_marginTop="@dimen/dp_12"
        app:layout_constraintLeft_toLeftOf="@+id/iv_bg"
        app:layout_constraintRight_toRightOf="@+id/iv_bg"
        android:maxLines="2"
        android:text="这家丹麦公司，想给全球仔猪换口粮"
        android:textSize="@dimen/sp_14"
        android:ellipsize="end"/>
    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/tv_title"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        android:layout_marginTop="@dimen/dp_5"
        android:textSize="@dimen/sp_12"
        android:textColor="@color/black_text"
        android:text="清凉一夏.2019/09/09 00：00"/>

</android.support.constraint.ConstraintLayout>
