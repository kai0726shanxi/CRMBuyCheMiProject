<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mDrawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.add.ReleaseVideoActivity">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/cl_left"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <include layout="@layout/title_bar_layout" />

        <View
            android:id="@+id/v_line1"
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_1"
            android:background="@color/home_bg"
            app:layout_constraintTop_toBottomOf="@+id/cl_bar" />

        <ImageView
            android:id="@+id/show_img"
            android:layout_width="@dimen/dp_121"
            android:layout_height="@dimen/dp_106"
            android:layout_margin="@dimen/dp_15"
            android:scaleType="centerCrop"
            android:src="@mipmap/test_video"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/v_line1" />

        <EditText
            android:id="@+id/edit_content"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_20"
            android:background="@color/transparent"
            android:hint="写标题并选择合适的分类，能让更多人 看到"
            android:padding="@dimen/dp_5"
            android:textColor="@color/black_ivory"
            android:textColorHint="@color/black_text"
            android:textSize="@dimen/sp_14"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/show_img"
            app:layout_constraintTop_toTopOf="@+id/show_img" />
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_10"
            android:textColor="@color/white"
            app:layout_constraintRight_toRightOf="@+id/show_img"
            app:layout_constraintBottom_toBottomOf="@+id/show_img"
            android:text="00：00"
            android:layout_margin="@dimen/dp_12"/>
        <TextView
            android:id="@+id/show_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:text="0/60"
            android:textColor="@color/black_text"
            android:textSize="@dimen/sp_10"
            app:layout_constraintRight_toLeftOf="@+id/show_img"
            app:layout_constraintBottom_toBottomOf="@+id/show_img" />

        <View
            android:id="@+id/v_line2"
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_100"
            android:background="@color/home_bg"
            app:layout_constraintTop_toBottomOf="@+id/show_num" />

        <TextView
            android:id="@+id/tv_classify"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:drawableLeft="@mipmap/classify_ic"
            android:drawablePadding="@dimen/dp_8"
            android:padding="@dimen/dp_15"
            android:text="添加分类"
            android:textColor="@color/black_ivory"
            android:textSize="@dimen/sp_14"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/v_line2" />

        <TextView
            android:id="@+id/tv_classify_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_15"
            android:drawableRight="@mipmap/next_ic"
            android:drawablePadding="@dimen/dp_5"
            android:hint="选择分类，让更多人看到"
            android:textColor="@color/black_ivory"
            android:textColorHint="@color/black_text"
            android:textSize="@dimen/sp_14"
            app:layout_constraintBaseline_toBaselineOf="@+id/tv_classify"
            app:layout_constraintRight_toRightOf="@+id/tv_classify" />

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/add_map_ic"
            android:drawablePadding="@dimen/dp_8"
            android:padding="@dimen/dp_15"
            android:text="所在位置"
            android:textColor="@color/black_ivory"
            android:textSize="@dimen/sp_14"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_classify" />

        <TextView
            android:id="@+id/tv_address_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_15"
            android:drawableRight="@mipmap/next_ic"
            android:drawablePadding="@dimen/dp_5"
            android:hint="选择地址"
            android:textColor="@color/black_ivory"
            android:textColorHint="@color/black_text"
            android:textSize="@dimen/sp_14"
            app:layout_constraintBaseline_toBaselineOf="@+id/tv_address"
            app:layout_constraintRight_toRightOf="@+id/tv_address" />
    </android.support.constraint.ConstraintLayout>

   <android.support.constraint.ConstraintLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_gravity="end"
       android:background="@color/white"
       >
       <android.support.v4.widget.NestedScrollView
           android:layout_width="@dimen/dp_0"
           android:layout_height="@dimen/dp_0"
           android:fillViewport="true"
           android:overScrollMode="never"
           app:layout_constraintLeft_toLeftOf="parent"
           app:layout_constraintRight_toRightOf="parent"
           app:layout_constraintTop_toTopOf="parent"
           app:layout_constraintBottom_toTopOf="@+id/v_line"
           android:layout_marginBottom="@dimen/dp_10">

           <android.support.constraint.ConstraintLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent">

               <TextView
                   android:id="@+id/tv1"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:padding="@dimen/sp_22"
                   android:text="产品"
                   android:textColor="@color/displaynomal"

                   android:textSize="@dimen/sp_14"
                   android:textStyle="bold" />

               <android.support.v7.widget.RecyclerView
                   android:id="@+id/recycle_project"
                   android:layout_width="@dimen/dp_0"
                   android:layout_height="wrap_content"
                   android:overScrollMode="never"
                   app:layout_constraintLeft_toLeftOf="parent"
                   app:layout_constraintRight_toRightOf="parent"
                   app:layout_constraintTop_toBottomOf="@+id/tv1" />

               <TextView
                   android:id="@+id/tv2"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:padding="@dimen/sp_22"
                   android:text="技术"
                   android:textColor="@color/displaynomal"

                   android:textSize="@dimen/sp_14"
                   android:textStyle="bold"
                   app:layout_constraintTop_toBottomOf="@id/recycle_project" />

               <android.support.v7.widget.RecyclerView
                   android:id="@+id/recycle_art"
                   android:layout_width="@dimen/dp_0"
                   android:layout_height="wrap_content"
                   android:overScrollMode="never"
                   app:layout_constraintLeft_toLeftOf="parent"
                   app:layout_constraintRight_toRightOf="parent"
                   app:layout_constraintTop_toBottomOf="@+id/tv2" />

               <TextView
                   android:id="@+id/tv3"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:padding="@dimen/sp_22"
                   android:text="常识"
                   android:textColor="@color/displaynomal"
                   android:textSize="@dimen/sp_14"
                   android:textStyle="bold"
                   app:layout_constraintTop_toBottomOf="@+id/recycle_art" />

               <android.support.v7.widget.RecyclerView
                   android:id="@+id/recycle_common"
                   android:layout_width="@dimen/dp_0"
                   android:layout_height="wrap_content"
                   android:overScrollMode="never"
                   app:layout_constraintLeft_toLeftOf="parent"
                   app:layout_constraintRight_toRightOf="parent"
                   app:layout_constraintTop_toBottomOf="@+id/tv3" />


           </android.support.constraint.ConstraintLayout>


       </android.support.v4.widget.NestedScrollView>
       <View
           android:id="@+id/v_line"
           android:layout_width="@dimen/dp_0"
           android:layout_height="@dimen/dp_1"
           app:layout_constraintLeft_toLeftOf="parent"
           app:layout_constraintRight_toRightOf="parent"
           app:layout_constraintBottom_toTopOf="@+id/tv_cancel"
           android:background="@color/home_bg"/>
       <TextView
           android:id="@+id/tv_affirm"
           android:layout_width="@dimen/dp_0"
           android:layout_height="@dimen/dp_46"
           android:text="确认"
           android:gravity="center"
           android:textSize="@dimen/sp_16"
           android:textColor="@color/white"
           android:background="@color/displaynomal"
           app:layout_constraintLeft_toRightOf="@+id/tv_cancel"
           app:layout_constraintRight_toRightOf="parent"
           app:layout_constraintBottom_toBottomOf="parent"/>
       <TextView
           android:id="@+id/tv_cancel"
           android:layout_width="@dimen/dp_0"
           android:layout_height="@dimen/dp_46"
           android:text="取消"
           android:gravity="center"
           android:textSize="@dimen/sp_16"
           android:textColor="@color/current_time_text"
           android:background="@color/white"
           app:layout_constraintRight_toLeftOf="@+id/tv_affirm"
           app:layout_constraintLeft_toLeftOf="parent"
           app:layout_constraintBottom_toBottomOf="parent"/>
   </android.support.constraint.ConstraintLayout>



</android.support.v4.widget.DrawerLayout>

