<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/home_bg"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".ui.activity.NewContactActivity">

    <include layout="@layout/title_bar_layout" />

    <TextView
        android:id="@+id/tv1"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/white"
        android:padding="@dimen/dp_15"
        android:text="客户公司名"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_14"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cl_bar" />

    <com.buychemi.crm.view.ClearEditText
        android:id="@+id/et_name"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:ellipsize="end"
        android:hint="请输入姓名"
        android:maxLines="1"
        android:padding="@dimen/dp_15"
        android:textColor="@color/black"
        android:textColorHint="@color/black_text"
        android:textSize="@dimen/sp_14"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintWidth_percent="0.7" />

    <TextView
        android:id="@+id/tv2"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/white"
        android:padding="@dimen/dp_15"
        android:text="所属行业"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_14"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv1" />

    <TextView
        android:id="@+id/tv_position"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"

        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/white"
        android:drawableRight="@mipmap/next_ic"
        android:drawablePadding="@dimen/dp_10"
        android:hint="请选择"
        android:padding="@dimen/dp_15"
        android:textColor="@color/black"
        android:textColorHint="@color/black_text"
        android:textSize="@dimen/sp_14"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv2"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/tv7"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_1"
        android:background="@color/white"
        android:padding="@dimen/dp_15"
        android:text="商户类型"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_14"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv2" />

    <TextView
        android:id="@+id/tv_customer"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"

        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/white"
        android:drawableRight="@mipmap/next_ic"
        android:drawablePadding="@dimen/dp_10"
        android:hint="请选择"
        android:padding="@dimen/dp_15"
        android:textColor="@color/black"
        android:textColorHint="@color/black_text"
        android:textSize="@dimen/sp_14"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv7"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/tv8"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_1"
        android:background="@color/white"
        android:padding="@dimen/dp_15"
        android:text="商户类型"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_14"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv7" />

    <TextView
        android:id="@+id/tv_contact_from"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/white"
        android:drawableRight="@mipmap/next_ic"
        android:drawablePadding="@dimen/dp_10"
        android:hint="请选择"
        android:padding="@dimen/dp_15"
        android:textColor="@color/black"
        android:textColorHint="@color/black_text"
        android:textSize="@dimen/sp_14"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv8"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/tv3"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_1"
        android:background="@color/white"
        android:padding="@dimen/dp_15"
        android:text="所在地区"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_14"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv8" />

    <com.buychemi.crm.view.ClearEditText
        android:id="@+id/et_position"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:ellipsize="end"
        android:hint="请输入所在地区"
        android:maxLines="1"
        android:padding="@dimen/dp_15"
        android:textColor="@color/black"
        android:textColorHint="@color/black_text"
        android:textSize="@dimen/sp_14"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv3"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintWidth_percent="0.8" />

    <TextView
        android:id="@+id/tv4"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_1"
        android:background="@color/white"
        android:padding="@dimen/dp_15"
        android:text="详细地址"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_14"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv3" />

    <com.buychemi.crm.view.ClearEditText
        android:id="@+id/et_phone"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:ellipsize="end"
        android:hint="请输入详细地址"
        android:maxLines="1"
        android:padding="@dimen/dp_15"
        android:textColor="@color/black"
        android:textColorHint="@color/black_text"
        android:textSize="@dimen/sp_14"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv4"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintWidth_percent="0.8" />

    <TextView
        android:id="@+id/tv5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_20"
        android:text="公司证照"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv4" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv5" />
</android.support.constraint.ConstraintLayout>
