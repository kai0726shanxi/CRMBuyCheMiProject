<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/home_bg"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context="com.chmichat.chat.ui.activity.me.UserInformationActivity">

    <include layout="@layout/title_bar_layout" />

    <View
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_0"
        android:layout_marginTop="@dimen/dp_1"
        android:background="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/tv_name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cl_bar" />

    <com.chmichat.chat.view.CircleImageView
        android:id="@+id/iv_head"
        android:layout_width="@dimen/dp_70"
        android:layout_height="@dimen/dp_70"
        android:layout_marginTop="@dimen/sp_28"
        android:src="@mipmap/head_ic"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cl_bar" />
    <ImageView
        android:layout_width="@dimen/dp_26"
        android:layout_height="@dimen/dp_21"
        app:layout_constraintLeft_toLeftOf="@+id/iv_head"
        app:layout_constraintRight_toRightOf="@+id/iv_head"
        app:layout_constraintTop_toTopOf="@+id/iv_head"
        app:layout_constraintBottom_toBottomOf="@+id/iv_head"
        android:src="@mipmap/picture_ic"/>

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:text="点击更换头像"
        android:textColor="@color/medynamic"
        android:textSize="@dimen/sp_12"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_head" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/white"
        android:padding="@dimen/dp_15"
        android:text="昵称"
        android:textColor="@color/black_ivory"
        android:textSize="@dimen/sp_14"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv1" />

    <EditText
        android:id="@+id/tv_name_content"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:ellipsize="end"
        android:gravity="right"
        android:hint="请输入昵称"
        android:lines="1"
        android:padding="@dimen/dp_15"
        android:textColor="@color/black_ivory"
        android:textColorHint="@color/medynamic"
        android:textSize="@dimen/sp_14"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_name"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintWidth_percent="0.6" />


    <TextView
        android:id="@+id/tv_sex"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_1"
        android:background="@color/white"
        android:padding="@dimen/dp_15"
        android:text="性别"
        android:textColor="@color/black_ivory"
        android:textSize="@dimen/sp_14"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_name" />

    <TextView
        android:id="@+id/tv_sex_content"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:drawableRight="@mipmap/next_ic"
        android:drawablePadding="@dimen/dp_10"
        android:gravity="right"
        android:padding="@dimen/dp_15"
        android:hint="请选择"
        android:textColorHint="@color/medynamic"
        android:textColor="@color/black_ivory"
        android:textSize="@dimen/sp_14"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_sex"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/tv_age"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_1"
        android:background="@color/white"
        android:padding="@dimen/dp_15"
        android:text="出生年月"
        android:textColor="@color/black_ivory"
        android:textSize="@dimen/sp_14"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_sex" />

    <TextView
        android:id="@+id/tv_age_content"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:drawableRight="@mipmap/next_ic"
        android:drawablePadding="@dimen/dp_10"
        android:gravity="right"
        android:hint="请选择"
        android:padding="@dimen/dp_15"
        android:textColor="@color/black_ivory"
        android:textColorHint="@color/medynamic"
        android:textSize="@dimen/sp_14"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_age"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/tv_signature"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_1"
        android:background="@color/white"
        android:padding="@dimen/dp_15"
        android:text="个性签名"
        android:textColor="@color/black_ivory"
        android:textSize="@dimen/sp_14"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_age" />

    <EditText
        android:id="@+id/tv_signature_name_content"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:ellipsize="end"
        android:gravity="right"
        android:hint="请输入签名"
        android:lines="1"
        android:padding="@dimen/dp_15"
        android:textColor="@color/black_ivory"
        android:textColorHint="@color/medynamic"
        android:textSize="@dimen/sp_14"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_signature"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintWidth_percent="0.7" />

    <TextView
        android:id="@+id/tv_post"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/white"
        android:padding="@dimen/dp_15"
        android:text="职位"
        android:visibility="gone"
        android:textColor="@color/black_ivory"
        android:textSize="@dimen/sp_14"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_signature" />

    <EditText
        android:id="@+id/tv_post_content"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:ellipsize="end"
        android:gravity="right"
        android:visibility="gone"
        android:hint="请输入职位"
        android:lines="1"
        android:padding="@dimen/dp_15"
        android:textColor="@color/black_ivory"
        android:textColorHint="@color/medynamic"
        android:textSize="@dimen/sp_14"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_post"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintWidth_percent="0.6" />

    <TextView
        android:id="@+id/tv_company_name"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_1"
        android:background="@color/white"
        android:padding="@dimen/dp_15"
        android:text="公司名称"
        android:textColor="@color/black_ivory"
        android:textSize="@dimen/sp_14"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_post" />

    <EditText
        android:id="@+id/tv_company_name_content"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:ellipsize="end"
        android:gravity="right"
        android:hint="请输入公司名称"
        android:lines="1"
        android:padding="@dimen/dp_15"
        android:textColor="@color/black_ivory"
        android:textColorHint="@color/medynamic"
        android:textSize="@dimen/sp_14"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_company_name"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintWidth_percent="0.6" />

</android.support.constraint.ConstraintLayout>
