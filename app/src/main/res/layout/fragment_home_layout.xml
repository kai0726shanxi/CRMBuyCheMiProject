<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <android.support.constraint.ConstraintLayout
        android:id="@+id/cl_bar"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_60"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_left_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_45"
            android:padding="@dimen/dp_5"
            android:text="论坛"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_22"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/dp_10"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/line_left"
            android:layout_width="@dimen/dp_5"
            android:layout_height="@dimen/dp_5"
            android:background="@drawable/bc_point_home"
            app:layout_constraintLeft_toLeftOf="@+id/tv_left_title"
            app:layout_constraintRight_toRightOf="@+id/tv_left_title"
            app:layout_constraintTop_toBottomOf="@+id/tv_left_title" />

        <TextView
            android:id="@+id/tv_right_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_5"
            android:text="视频专区"
            android:textColor="@color/hometopright"
            android:textSize="@dimen/sp_14"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/dp_10"
            app:layout_constraintBaseline_toBaselineOf="@+id/tv_left_title"
            app:layout_constraintLeft_toRightOf="@+id/tv_left_title"
             />

        <View
            android:id="@+id/line_right"
            android:layout_width="@dimen/dp_5"
            android:layout_height="@dimen/dp_5"
            android:background="@drawable/bc_point_home"
            android:visibility="invisible"
            app:layout_constraintLeft_toLeftOf="@+id/tv_right_title"
            app:layout_constraintRight_toRightOf="@+id/tv_right_title"
            app:layout_constraintTop_toBottomOf="@+id/tv_right_title" />
        <ImageView
            android:id="@+id/iv_search"
            android:layout_width="@dimen/dp_35"
            android:layout_height="@dimen/dp_35"
            android:src="@mipmap/home_search_ic"
            android:padding="@dimen/dp_10"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/cl_bar"
            app:layout_constraintBottom_toBottomOf="@+id/cl_bar"
            android:layout_marginRight="@dimen/dp_15"/>
    </android.support.constraint.ConstraintLayout>

    <FrameLayout
        android:id="@+id/fl_containe"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cl_bar" />
</android.support.constraint.ConstraintLayout>
